<Window x:Class="NbfcServiceClient.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="170" Width="260" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <CheckBox x:Name="startWithWin" Content="Start with Windows" HorizontalAlignment="Left" Margin="23,10,0,0" 
                  VerticalAlignment="Top" Checked="startWithWin_Checked" Unchecked="startWithWin_Unchecked"  />
        
        <CheckBox x:Name="closeToTray" Content="Close to tray" HorizontalAlignment="Left" Margin="23,35,0,0" 
                  VerticalAlignment="Top" Checked="closeToTray_Checked" Unchecked="closeToTray_Unchecked"/>
        
        <Label Content="Tray icon color:" HorizontalAlignment="Left" Margin="20,65,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="colorPicker" HorizontalAlignment="Left" Margin="69,96,0,0" VerticalAlignment="Top" 
                  Width="162" SelectionChanged="colorPicker_SelectionChanged"/>
    </Grid>
</Window>
