<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="NbfcClient.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false"/>
    </sectionGroup>
  </configSections>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
  
  <system.serviceModel>
    <bindings>
      <netNamedPipeBinding>
        <binding name="NetNamedPipeBinding_IFanControlService"/>
      </netNamedPipeBinding>
    </bindings>
    <client>
      <endpoint address="net.pipe://localhost/StagWare.FanControl.Service/FanControlService" binding="netNamedPipeBinding" bindingConfiguration="NetNamedPipeBinding_IFanControlService" contract="NbfcService.IFanControlService" name="NetNamedPipeBinding_IFanControlService">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>
    </client>
  </system.serviceModel>
  
  <nlog 
    xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    useInvariantCulture="true">
    
    <variable name="logdir" value="${specialfolder:folder=ApplicationData}/NoteBookFanControl"/>
    <variable name="tab" value="${literal:text=\t}"/>
    <targets>
      <target
        name="log"
        xsi:type="File"
        fileName="${logdir}/NoteBookFanControl-${shortdate}.log"
        archiveFileName="${logdir}/NoteBookFanControl-{#}.log"
        archiveNumbering="Date"
        archiveDateFormat="yyyy-MM-dd"
        archiveEvery="Monday"
        maxArchiveFiles="2"
        encoding="utf-8">
        
        <layout xsi:type="LayoutWithHeaderAndFooter">
          <header 
            xsi:type="SimpleLayout"
            text="AssemblyVersion: ${assembly-version}${newline}${newline}Timestamp${tab}Level${tab}Message${tab}Exception${tab}Callsite${tab}Stacktrace"/>
          
          <layout xsi:type="CsvLayout" delimiter="Tab" withHeader="false">
            <column name="time" layout="${longdate}" />
            <column name="level" layout="${level}"/>
            <column name="message" layout="${message}" />
            <column name="exception" layout="${exception}"/>
            <column name="callsite" layout="${callsite:includeSourcePath=true}" />          
            <column name="stacktrace" layout="${stacktrace:topFrames=20}" />          
          </layout>
        </layout> 
      </target>
    </targets>
  
    <rules>
        <logger name="*" minlevel="Info" writeTo="log" />
    </rules>
  </nlog>
  
  <userSettings>
    <NbfcClient.Properties.Settings>
      <setting name="UpgradeRequired" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="TrayIconForegroundColor" serializeAs="String">
        <value>#FFFFFFFF</value>
      </setting>
      <setting name="CloseToTray" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="WindowHeight" serializeAs="String">
        <value>350</value>
      </setting>
      <setting name="WindowWidth" serializeAs="String">
        <value>430</value>
      </setting>
    </NbfcClient.Properties.Settings>
  </userSettings>
</configuration>
